@model TaskManagerSqliteMvc.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-white">
                <h4 class="mb-0 text-danger">Delete Task</h4>
            </div>

            <div class="card-body">
                <p class="mb-2">Are you sure you want to delete this task?</p>

                <div class="alert alert-light border">
                    <div class="fw-semibold">@Model.Title</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <div class="text-muted small">@Model.Description</div>
                    }
                </div>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">Yes, delete</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
